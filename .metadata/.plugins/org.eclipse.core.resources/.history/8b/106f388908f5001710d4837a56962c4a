
public class Utility {
	
	int fact(int n)
	{
	    return (n==1)? 1 : n*fact(n-1);
	}

	public void permItr(String perm) {

		char ch[]=perm.toCharArray();
		int n=perm.length();
		int fact=fact(n);
		
		int j=1;  // pointing to 2nd location
		
		int m=0;   //position to char to be fixed
		
		for(int i=0;i<fact;)
		{
			int k=0;
			while(k!=fact/n)
			{
				while(j!=n-1)
				{
					char temp=ch[j];
					ch[j]=ch[j-1];
					ch[j-1]=temp;
					for(int z=0;z<ch.length;z++)
					{
						System.out.print(ch[z]);
					}
					System.out.println();
					k++;
					i++;
					j++;
				}
				j=1;
			}
			m++;
			if(m==n)
			{
				break;
			}
			swap(ch[0],ch[m], ch);
			char temp=ch[m];
			ch[m]=ch[0];
			ch[0]=temp;
			for(int z=0;z<ch.length;z++)
			{
				System.out.print(ch[z]);
			}
			System.out.println();
		}
	}

	private void swap(char c, char d, char[] ch) {

		char temp=c;
		c=d;
		d=temp;
		
		
		System.out.println();
	}

	
	
}
