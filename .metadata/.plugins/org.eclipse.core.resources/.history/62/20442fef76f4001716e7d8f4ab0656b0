import java.util.Scanner;

public class Binary {

	public static void main(String[] args) {

		Utility ut=new Utility();
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the decimal number");
		int dec=scan.nextInt();
		char[] binary=ut.tobin(dec);
		System.out.println();
		for(int i=0, j=binary.length/2;i<=binary.length/2-1 || j<binary.length;i++)
		{
			char temp=binary[i];
			binary[i]=binary[j];
			binary[j]=temp;
			j++;
		}
		System.out.println("After swapping the nibbles");
		for(int i=0;i<binary.length;i++)
		{
			System.out.print(binary[i]);	
		}
		System.out.println();
		int num=Integer.parseInt(String.valueOf(binary));
		System.out.println(num);
		ut.binaryToDecimal( num);
	}

	

}
